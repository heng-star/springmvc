<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--WEB-INF目录普通用户没权限-->



    <!--&lt;!&ndash;注册中央处理器&#45;&#45;-->
    <servlet>
        <servlet-name>springmvc</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <init-param>
            <param-name >contextConfigLocation</param-name>
            <param-value>classpath:springmvc.xml</param-value>
            <!--识别springmvc配置器-->
        </init-param>

        <!--DispatcherServlet是创建的tomcat服务器对象
            DispatcherServlet会创建容器对象，读取mvc的配置对象
            用户可获得对象直接使用，servlet会出事init()初始方法
             ，DispatcherServlet即会创建容器，读取xml配置文件

             把容器放在servletcontext里-->

        <load-on-startup>1</load-on-startup>
        <!--表示容器启动顺序-->


    </servlet>

    <servlet-mapping>
        <servlet-name>springmvc</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <!--<!-注册字符集过滤器:解决post请求乱码的问题&ndash;&gt;-->
    <filter>
        <filter-name >characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <!--&lt;!&ndash;指定字符集&#45;&#45;-->
        <init-param>
        <param-name >encoding</param-name>
        <param-value>utf-8</param-value>
        <!--&lt;!&ndash;强制 request使用字符集 encoding&#45;&#45;-->
        </init-param>
        <init-param>
            <param-name>forceRequestEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
        <!--!-强制 response使用字符集 encoding&#45;&#45;-->
        <init-param>
        <param-name>forceResponse Encoding</param-name>
        <param-value>true</param-value>
        </init-param>
    </filter>

        <filter-mapping>
            <filter-name>characterEncodingFilter</filter-name>
            <url-pattern>/*</url-pattern>
        </filter-mapping>

</web-app>